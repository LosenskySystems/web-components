{
  "name": "@losensky-systems/web-components-css",
  "version": "0.0.3",
  "description": "CSS and design tokens for Losensky Systems web components",
  "type": "module",
  "main": "dist/index.css",
  "types": "index.d.ts",
  "style": "dist/index.css",
  "exports": {
    ".": "./dist/index.css",
    "./dist/index.css": "./dist/index.css",
    
    "./tokens": "./dist/constants/tokens.css",
    
    "./components/button": "./dist/components/elements/button/index.css",
    "./components/divider": "./dist/components/elements/divider/index.css",
    "./components/label": "./dist/components/elements/label/index.css",
    "./components/loader": "./dist/components/elements/loader/index.css",
    "./components/input": "./dist/components/forms/input/index.css",
    "./components/select": "./dist/components/forms/select/index.css",
    
    "./components/*": "./dist/components/*/*.css",
    "./dist/*": "./dist/*"
  },
  "files": [
    "dist",
    "src",
    "index.d.ts"
  ],
  "scripts": {
    "build": "npm run build:css",
    "build:css": "node scripts/build-css.js",
    "clean": "rm -rf dist",
    "watch": "npm run build:css -- --watch"
  },
  "keywords": [
    "css",
    "design-tokens",
    "web-components",
    "design-system"
  ],
  "author": "Ondřej Losenský",
  "license": "MIT",
  "devDependencies": {
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0"
  }
}
