{
  "name": "@losensky-systems/web-components-core",
  "version": "0.1.0",
  "description": "Web components library - Losensky Systems",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./css": "./dist/index.css"
  },
  "files": [
    "dist",
    "structure.json"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run generate-structure && vite build && tsc --project tsconfig.build.json",
    "build:watch": "vite build --watch",
    "clean": "rm -rf dist",
    "preview": "vite preview",
    "generate-structure": "node scripts/generate-structure.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "keywords": [
    "web-components",
    "react",
    "frontend"
  ],
  "author": "Ondřej Losenský",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.4",
    "typescript": "~5.9.3",
    "vite": "^7.1.7"
  },
  "dependencies": {
    "@losensky-systems/web-components-tailwindcss": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}