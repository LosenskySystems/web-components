{
  "name": "@losensky-systems/web-components-core",
  "version": "0.0.1",
  "description": "Core web components library for Losensky Systems",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "style": "dist/index.css",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/./index.esm.js",
      "require": "./dist/./index.cjs.js"
    },
    "./styles/*": "./dist/styles/*",
    "./package.json": "./package.json",
    "./utils": {
      "import": "./dist/utils/index.esm.js",
      "require": "./dist/utils/index.cjs.js"
    },
    "./constants": {
      "import": "./dist/constants/index.esm.js",
      "require": "./dist/constants/index.cjs.js"
    },
    "./components/elements/input": {
      "import": "./dist/components/elements/input/index.esm.js",
      "require": "./dist/components/elements/input/index.cjs.js",
      "style": "./dist/components/elements/input/index.css"
    },
    "./components/elements/button": {
      "import": "./dist/components/elements/button/index.esm.js",
      "require": "./dist/components/elements/button/index.cjs.js",
      "style": "./dist/components/elements/button/index.css"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup --config config/rollup.config.js",
    "build:watch": "rollup --config config/rollup.config.js --watch",
    "clean": "rm -rf dist",
    "update-exports": "node scripts/update-exports.js",
    "prebuild": "npm run update-exports",
    "serve": "npx serve . -p 3001"
  },
  "keywords": [
    "web-components",
    "react",
    "frontend"
  ],
  "author": "Ondřej Losenský",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-syntax-class-properties": "^7.12.13",
    "@babel/preset-env": "^7.23.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@rollup/plugin-terser": "^0.4.4",
    "glob": "^11.0.3",
    "postcss": "^8.4.31",
    "rollup": "^4.3.0",
    "rollup-plugin-postcss": "^4.0.2"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  }
}