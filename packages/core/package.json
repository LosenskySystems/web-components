{
  "name": "@losensky-systems/web-components-core",
  "version": "1.0.0",
  "description": "React component library for Losensky Systems",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./css": "./dist/index.css"
  },
  "files": [
    "dist",
    "component-structure.json"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run generate-structure && vite build && tsc --project tsconfig.build.json",
    "build:watch": "vite build --watch",
    "clean": "rm -rf dist",
    "preview": "vite preview",
    "generate-structure": "node scripts/generate-structure.js"
  },
  "keywords": [
    "web-components",
    "react",
    "frontend"
  ],
  "author": "Ondřej Losenský",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "typescript": "~5.9.3",
    "vite": "^7.1.7"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  }
}